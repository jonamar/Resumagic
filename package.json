{
  "name": "resumagic-app",
  "version": "1.0.0",
  "description": "Professional resume and cover letter generator with intelligent keyword analysis",
  "type": "module",
  "main": "generate-resume.js",
  "scripts": {
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --watchAll=false",
    "test:unit": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --testPathIgnorePatterns=integration",
    "test:integration": "NODE_OPTIONS=\"--experimental-vm-modules\" jest __tests__/integration",
    "test:document-generation": "NODE_OPTIONS=\"--experimental-vm-modules\" jest __tests__/integration/document-generation-contract.test.js",
    "test:keyword-analysis": "NODE_OPTIONS=\"--experimental-vm-modules\" jest __tests__/integration/keyword-analysis-contract.test.js",
    "update-document-generation-golden-masters": "node scripts/update-golden-masters.js document-generation",
    "test:ci": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage --watchAll=false --ci --testTimeout=10000",
    "test:all": "npm run test:ci && npm run test:python",
    "test:python": "cd services/keyword-analysis && python -m pytest kw_rank/utils/test_error_handler.py -v",
    "test:python:coverage": "cd services/keyword-analysis && python -m pytest kw_rank/utils/test_error_handler.py -v --cov=kw_rank.utils --cov-report=xml",
    "lint": "eslint .",
    "lint:errors": "eslint . --config .eslintrc.error-handling.js",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --format=json --output-file=eslint-results.json || true",
    "validate:error-handling": "node -e \"import('./utils/error-handler.js').then(() => import('./utils/error-types.js')).then(() => console.log('✅ Error handling validation passed')).catch(e => {console.error('❌ Error handling validation failed:', e.message); process.exit(1);});\"",
    "ci:pre-commit": "npm run lint && npm run test:ci && npm run validate:error-handling",
    "ci:full": "npm run ci:pre-commit && npm run test:python",
    "ci:local": "../scripts/ci/local-pipeline.sh",
    "ci:validate": "../scripts/ci/validate-all.sh",
    "vale:start": "node services/vale-linting/process-manager.js start",
    "vale:stop": "node services/vale-linting/process-manager.js stop",
    "vale:status": "node services/vale-linting/process-manager.js status"
  },
  "dependencies": {
    "docx": "^9.5.1",
    "gray-matter": "^4.0.3",
    "jszip": "^3.10.1",
    "marked": "^16.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "jest": "^29.7.0"
  }
}
